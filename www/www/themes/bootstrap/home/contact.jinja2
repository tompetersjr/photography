{% extends "base.jinja2" %}

{% block content %}
    {% if email_sent == true %}
        <h1 class="p-2">Thank You!</h1>
        <p class="p-2">Your enquiry has been sent. We will get back to you as soon as we can.</p>
    {% else %}
        <h1 class="p-2">Contact</h1>
        <div class="row justify-content-between p-2">
            <div class="col-md-7">
                <!-- Contact Form -->
                <form id="contact-form" method="post" action="{{ url }}">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="name">Name:</label>
                            <input class="form-control" id="name" name="name" type="text"
                                   placeholder="John Doe" type="text">
                        </div>

                        <div class="col-md-6 form-group">
                            <label for="email">Email:</label>
                            <input class="form-control" id="email" name="email" type="text"
                                   placeholder="jdoe@myemail.com" type="email">
                        </div>

                        <div class="col-md-12 form-group">
                            <label for="subject">Subject:</label>
                            <input class="form-control" id="subject" name="subject" type="text"
                                   placeholder="I would like to know about...." type="text">
                        </div>

                        <div class="col-md-12 form-group">
                            <label for="message">Message:</label>
                            <textarea class="form-control" id="message" name="message" type="text"
                                      rows="7"></textarea>
                        </div>
                    </div>

                    <button class="btn btn-primary" type="submit"
                            name="form.submitted" role="button">Send Enquiry
                    </button>
                </form>
                <!-- End Contact Form -->
            </div>

            <div class="col-md-4">
                <h1>{{ request.site.name }}</h1>

                <h3>{{ request.site.photographer }}</h3>

                <div class="mb-4">
                    <br><i class="fas fa-envelope"></i>&nbsp;
                    <a href="mailto:{{ request.site.contact }}">{{ request.site.contact }}</a>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock content %}
