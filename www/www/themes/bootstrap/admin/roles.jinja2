{% extends "admin.jinja2" %}

{% block admin_content %}
    <h1>Roles</h1>
    <br/>
    {% for group_row in groups | batch(2, None) %}
        <div class="card-deck">
            {% for group in group_row %}
                <div class="card">
                    <div class="card-header">
                        <h5>{{ group.role }}</h5>
                    </div>
                    <div class="card-body">
                        Users:
                        {% for user in group.users %}
                            user
                        {% endfor %}
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-secondary btn-sm">
                            <i class="fas fa-pencil-alt"></i>
                        </button>
                        <button type="button" class="btn btn-secondary btn-sm">
                            <i class="fas fa-unlock"></i>
                        </button>
                        <button type="button" class="btn btn-secondary btn-sm">
                            <i class="fas fa-key"></i>
                        </button>
                    </div>
                </div>
            {% endfor %}
        </div>
        <br/>
    {% endfor %}
    <hr/>
    <strong>Key:</strong>&nbsp;&nbsp;
    <i class="fas fa-pencil-alt"></i> Edit&nbsp;&nbsp;
    <i class="fas fa-lock"></i> Activate&nbsp;&nbsp;
    <i class="fas fa-unlock"></i> Deactivate&nbsp;&nbsp;
    <i class="fas fa-key"></i> Change Password&nbsp;&nbsp;
{% endblock admin_content %}
